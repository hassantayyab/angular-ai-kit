{
  "name": "@angular-ai-kit/core",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/angular-ai-kit/src",
  "prefix": "lib",
  "projectType": "library",
  "release": {
    "version": {
      "manifestRootsToUpdate": ["dist/{projectRoot}"],
      "currentVersionResolver": "git-tag",
      "fallbackCurrentVersionResolver": "disk"
    }
  },
  "tags": ["scope:public", "type:ui"],
  "targets": {
    "build": {
      "executor": "@nx/angular:package",
      "outputs": ["{workspaceRoot}/dist/{projectRoot}"],
      "options": {
        "project": "packages/angular-ai-kit/ng-package.json",
        "tsConfig": "packages/angular-ai-kit/tsconfig.lib.json"
      },
      "configurations": {
        "production": {
          "tsConfig": "packages/angular-ai-kit/tsconfig.lib.prod.json"
        },
        "development": {}
      },
      "defaultConfiguration": "production"
    },
    "build-schematics": {
      "executor": "nx:run-commands",
      "dependsOn": ["build"],
      "outputs": ["{workspaceRoot}/dist/{projectRoot}/schematics"],
      "options": {
        "command": "npx tsc -p packages/angular-ai-kit/schematics/tsconfig.json"
      }
    },
    "package": {
      "executor": "nx:run-commands",
      "outputs": ["{workspaceRoot}/dist/{projectRoot}"],
      "options": {
        "commands": [
          "nx run @angular-ai-kit/core:build",
          "nx run @angular-ai-kit/core:build-schematics"
        ],
        "parallel": false
      }
    },
    "nx-release-publish": {
      "options": {
        "packageRoot": "dist/{projectRoot}"
      }
    },
    "test": {
      "executor": "@nx/angular:unit-test",
      "options": {}
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    }
  }
}
